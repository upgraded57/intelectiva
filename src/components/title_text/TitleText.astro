---
const { title = "Some Title" } = Astro.props;
---

<div class="title_text">
  <h3>{title}</h3>
  <div class="title_text_underline"></div>
</div>

<style>
  .title_text {
    width: min(454px, 100%);
    margin-bottom: 50px;
  }

  .title_text h3 {
    text-wrap: nowrap;
    text-overflow: ellipsis;
  }

  .title_text_underline {
    width: 100%;
    height: 2px;
    border-radius: 2px;
    background: var(--dark-blue-clr);
  }

  @media screen and (max-width: 768px) {
    .title_text {
      margin-bottom: 30px;
    }

    .title_text_underline {
      width: min(300px, 100%);
    }
  }
</style>
