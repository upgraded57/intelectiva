---
import "../services.css";
// Components
import { Image } from "astro:assets";
import Footer from "../../components/footer/Footer.astro";

// Images
import Layout from "../../layouts/Layout.astro";

const services = [
  {
    title: "Digital Marketing",
    text: [
      "Our diverse skill set and competency pool have allowed us to effectively establish strategic alliances with a range of businesses in various industries. Among them are:",
    ],
    highlights: [
      "Digital Marketing Consultancy Service",
      "Search Engine Optimization (SEO)",
      "Content Marketing",
      "Social Media Marketing",
      "Pay-Per-Click (PPC) advertising",
      "Email Marketing",
      "Analytics and Reporting",
      "Digital strategy consulting",
    ],
    bgColor: "#CACCCB",
    color: "#141416",
  },
];
---

<Layout>
  <div class="service_hero">
    <div class="service_hero_bg">
      <Image
        src="https://images.unsplash.com/photo-1521791136064-7986c2920216?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
        alt={services[0].title}
        width={1000}
        height={600}
      />
    </div>
    <div class="service_hero_text">
      {services[0].title}
    </div>
  </div>
  <div
    class="service_content"
    style={`background: ${services[0].bgColor}; color: ${services[0].color}`}
  >
    <div class="px">
      <p>
        {services[0].text}
      </p>
    </div>

    <div class="service_content_points">
      <ul>
        {services[0].highlights.map((highlight) => <li>{highlight}</li>)}
      </ul>
    </div>
  </div>

  <Footer />
</Layout>
