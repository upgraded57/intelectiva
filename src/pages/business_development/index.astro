---
import "../services.css";
// Components
import { Image } from "astro:assets";
import Footer from "../../components/footer/Footer.astro";

// Images
import service_img_2 from "../../images/service_img_2.jpg";
import Layout from "../../layouts/Layout.astro";

const services = [
  {
    title: "Business Development",
    text: [
      'From small businesses to large global conglomerates, we can assist you in building long-term value for your enterprise through partnerships, markets, and customers. We can even assist you in "solidifying" and "codifying" corporate initiatives to increase your customer base in unconventional business environments. We accomplish this by:',
    ],
    highlights: [
      "Figuring out the several ways to reach our client's market, their leverage points, and provide early market feedback to their internal team.",
      "Giving quantifiable information to ascertain the company's goals and areas of strength.",
      "Establishing a framework of support.",
    ],
    image: service_img_2,
    layout: "normal",
    bgColor: "#1E1A0E",
    color: "white",
  },
];
---

<Layout>
  <div class="service_hero">
    <div class="service_hero_bg">
      <Image
        src="https://images.unsplash.com/photo-1532619675605-1ede6c2ed2b0?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
        alt={services[0].title}
        width={1000}
        height={600}
      />
    </div>
    <div class="service_hero_text">
      {services[0].title}
    </div>
  </div>
  <div
    class="service_content"
    style={`background: ${services[0].bgColor}; color: ${services[0].color}`}
  >
    <div class="px">
      <p>
        {services[0].text}
      </p>

      <div class="service_content_points">
        <ul>
          {services[0]?.highlights.map((highlight) => <li>{highlight}</li>)}
        </ul>
      </div>
    </div>
  </div>

  <Footer />
</Layout>
